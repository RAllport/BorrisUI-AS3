package Borris.controls 
{
	/**
	 * The BButtonLabelPlacement class defines constants for the values of the labelPlacement property of a 
	 * BLabelButton, BButton, BCheckBox, BRadioButton, or BIconRadioButton component.
	 * 
	 * @author Rohaan Allport
	 */
	public class BButtonLabelPlacement 
	{
		/**
		 * The label appears to the left.
		 */
		public static const LEFT:String = "left";
		
		/**
		 * The label appears to the right.
		 */
		public static const RIGHT:String = "right";
		
		/**
		 * The label appears at the top.
		 */
		public static const TOP:String = "top";
		
		/**
		 * The label appears at the bottom.
		 */
		public static const BOTTOM:String = "bottom";
		
		
		/**
		 * The label appears at the center.
		 */
		public static const CENTER:String = "center";
		
		
		/**
		 * The label appears at the top left.
		 */
		public static const TOP_LEFT:String = "topLeft";
		
		/**
		 * The label appears at the bottom left.
		 */
		public static const BOTTOM_LEFT:String = "bottomLeft";
		
		/**
		 * The label appears at the top right.
		 */
		public static const TOP_RIGHT:String = "topRight";
		
		/**
		 * The label appears at the bottom right.
		 */
		public static const BOTTOM_RIGHT:String = "bottomRight";
		
		
	}

}